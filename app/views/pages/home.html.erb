<br>
<%= form_tag '/query', id: 'query_form', method: :post do %>
  <div id="content">
    <div class="col-sm-6">
      <%= label_tag 'Page ID' %>
      <div class="form-group">
        <%= text_field_tag 'page_ids[]', nil, class: 'form-control' %>
      </div>
    </div>

    <div class="col-sm-6">
      <%= label_tag 'Posts Number' %>
      <div class="form-group">
        <%= text_field_tag 'posts_limit[]', nil, class: 'form-control', size: 4 %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= check_box_tag 'csv', class: 'form-control' %>
    <%= label_tag 'Export to CSV?' %>
  </div>

  <%= link_to 'Add another page', "javascript:addMoreFields();", class: 'btn btn-primary' %>
  <%= submit_tag 'Get Interactions', name: 'interactions', id: 'submitButton', class: 'btn btn-success' %>
<% end %>

<div id="interactions" style="display: none;">
  <h2>Results</h2>
  <p></p>
</div>
